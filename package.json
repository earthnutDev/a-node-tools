{
  "type": "module",
  "version": "0.1.1",
  "name": "a-node-tools",
  "main": "cjs/index.cjs",
  "module": "mjs/index.mjs",
  "typings": "types/index.d.ts",
  "description": "some function about node",
  "files": [
    "mjs/",
    "cjs/",
    "types/",
    "CHANGELOG-en.md"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./mjs/index.mjs",
        "types": "./types/index.d.ts"
      },
      "require": {
        "default": "./cjs/index.cjs",
        "types": "./types/index.d.ts"
      }
    }
  },
  "scripts": {
    "b": "rollup --config rollup.config.js && tsc -p tsconfig.types.json",
    "clean:package": "node scripts/clean-package-json.js",
    "build": "npx ixxx rm dist && npm run b && npm run clean:package",
    "push:version": "npm run beautify && bash -c 'git add . && git commit -m \"version: $1 $(date +\"%Y-%m-%d %H:%M:%S\")${2:+ }$2\" && git tag -a \"v$1\" -m \"$(date +\"%Y-%m-%d %H:%M:%S\")${2:+ }$2\" && git push origin main --tags' -- ",
    "push:submit": "npm run beautify && bash -c 'git add . && git commit -m \"submit: $(date +\"%Y-%m-%d %H:%M:%S\")${1:+ }$1\" && git push origin main' -- ",
    "clean": "npx ixxx up -d  rm node_modules dist  && npm run npm install && npm run b",
    "eslint": "npx ixxx cls && npx eslint src",
    "beautify": "npm run eslint && npm run prettier",
    "prettier": "npx ixxx cls && npx prettier . --write",
    "prepare": "husky",
    "test": "npx ixxx cls && npx jest --coverage",
    "report": "cat ./coverage/lcov.info | coveralls",
    "coverage": "codecov",
    "versionUpdate": "npx ixxx up -n",
    "pub": "npm run build && && cd ./dist && npm publish && cd../"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/earthnutDev/a-node-tools.git"
  },
  "author": {
    "name": "earthnut",
    "email": "earthnut.dev@outlook.com",
    "url": "https://earthnut.dev"
  },
  "license": "ISC",
  "keywords": [
    "a-node-tools"
  ],
  "homepage": "https://earthnut.dev/a-node-tools",
  "bugs": {
    "url": "https://github.com/earthnutDev/a-node-tools/issues",
    "email": "earthnut.dev@outlook.com"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,jsx,md,mdx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.13",
    "codecov": "^3.8.2",
    "coveralls": "^3.1.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsdoc": "^50.6.9",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rollup": "^4.37.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "a-js-tools": ">=0.1.1 <1.0.0",
    "a-type-of-js": ">=0.1.5 <1.0.0",
    "color-pen": ">=0.1.0 <1.0.0"
  },
  "browserslist": [
    "node>=12.0.0"
  ],
  "engines": {
    "node": ">=12.0.0"
  }
}
