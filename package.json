{
  "type": "module",
  "version": "1.1.0",
  "name": "a-node-tools",
  "private": true,
  "description": "一点点 🤏 node 函数",
  "scripts": {
    "b": "rollup --config rollup.config.js && tsc -p tsconfig.types.json",
    "clean:package": "node scripts/clean-package-json.js",
    "build": "jja rm dist && npm run b && npm run clean:package",
    "build:dev": "rollup --config rollup.dev.config.js",
    "dev": "jja rm .eg cls && npm run build:dev && node --unhandled-rejections=strict .eg/index.mjs",
    "push:version": "gvv",
    "push:submit": "gvv",
    "eslint": "jja cls && npx eslint src",
    "beautify": "npm run eslint && npm run prettier",
    "prettier": "jja cls && npx prettier . --write",
    "prepare": "husky",
    "test": "jja clear && npx jest --coverage",
    "report": "cat ./coverage/lcov.info | coveralls",
    "coverage": "codecov",
    "vjj": "vjj -b",
    "prepublishOnly": "pjj"
  },
  "license": "ISC",
  "lint-staged": {
    "src/*.{js,ts,tsx,jsx,md,mdx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.23.0",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "babel-jest": "^29.7.0",
    "codecov": "^3.8.2",
    "coveralls": "^3.1.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsdoc": "^50.6.9",
    "globals": "^16.0.0",
    "gvv": "^0.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jja": "^1.0.3",
    "lint-staged": "^15.5.0",
    "pjj": "^0.1.4",
    "prettier": "^3.5.3",
    "rollup": "^4.39.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.3.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vjj": "^0.1.2"
  },
  "dependencies": {
    "a-js-tools": ">=0.1.4 <1.0.0",
    "a-type-of-js": ">=0.2.0 <1.0.0",
    "color-pen": ">=0.1.3 <1.0.0"
  }
}
