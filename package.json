{
  "type": "module",
  "version": "2.0.0",
  "name": "a-node-tools",
  "private": true,
  "description": "一点点 🤏 node 函数",
  "scripts": {
    "b": "rollup --config rollup.config.js && tsc -p tsconfig.types.json",
    "clean:package": "node scripts/clean-package-json.js",
    "build": "jja rm dist && npm run b && npm run clean:package",
    "build:dev": "rollup --config rollup.dev.config.js",
    "dev": "jja rm .eg cls && npm run build:dev && node --unhandled-rejections=strict .eg/index.mjs",
    "push:version": "gvv",
    "push:submit": "gvv",
    "diff": "jja pkg -d",
    "eslint": "jja cls && eslint src",
    "beautify": "npm run eslint && npm run prettier",
    "prettier": "jja cls && prettier . --write",
    "prepare": "husky",
    "test": "jja clear && jest --coverage",
    "report": "cat ./coverage/lcov.info | coveralls",
    "coverage": "codecov",
    "vjj": "vjj -b",
    "prepublishOnly": "pjj"
  },
  "license": "ISC",
  "lint-staged": {
    "src/*.{js,ts,tsx,jsx,md,mdx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.25.0",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "babel-jest": "^29.7.0",
    "codecov": "^3.8.3",
    "coveralls": "^3.1.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsdoc": "^50.6.9",
    "globals": "^16.0.0",
    "gvv": "^0.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jja": "^2.1.1",
    "lint-staged": "^15.5.1",
    "pjj": "^0.1.4",
    "prettier": "^3.5.3",
    "rollup": "^4.40.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.3.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vjj": "^0.3.1"
  },
  "dependencies": {
    "@qqi/dev-log": "^0.1.0",
    "a-js-tools": "^0.5.4",
    "a-type-of-js": ">=0.2.0 <1.0.0",
    "color-pen": ">=0.2.0 <1.0.0"
  }
}
